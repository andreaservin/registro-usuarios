doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Register Form
    body 
        div(style="min-width:30vw;")
            form(action="/register", method="post" style="display:flex; flex-direction:column;")
                div(style="display: flex; flex-direction:column; max-width:300px; margin:10px")
                    label(for="name") Nombre 
                    input(type="text", name="name" id="name") 
                div(style="display: flex; flex-direction:column; max-width:300px; margin:10px")
                    label(for="email") Email 
                    input(type="email", name="email" id="email") 
                div(style="display: flex; flex-direction:column; max-width:300px; margin:10px")
                    label(for="password") Contrase√±a 
                    input(type="password", name="password" id="password") 
                div(style="display: flex; justify-content:end; max-width:300px; margin:10px")
                    button(type="submit") Registrarse